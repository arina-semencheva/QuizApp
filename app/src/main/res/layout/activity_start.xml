<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_vertical"
    tools:context=".Start">

    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:contentDescription="@string/todo" />

    <TextView
        android:layout_marginTop="250dp"
        android:layout_marginHorizontal="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Сейчас вам предстоит пройти Оксфордский опросник счастья. На каждый ответ даётся 30 секунд. Вдохните поглубже! Успокойтесь и нажимайте на кнопку! :)"
        android:textColor="@android:color/white"
        android:background="#c3166300"
        android:textSize="21sp" />


    <android.support.v7.widget.CardView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500sp"
        android:layout_width="310sp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnPlay"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#AD1457"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="начать тест"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:theme="@style/MyButton" />

    </android.support.v7.widget.CardView>


</RelativeLayout>